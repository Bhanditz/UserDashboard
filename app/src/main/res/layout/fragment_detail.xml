<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".detail.DetailFragment">


    <ImageView
        android:id="@+id/detail_fragment_background_imageview"
        android:src="@drawable/test_profile_pic"
        android:scaleType="centerCrop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detail_fragment_location_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        tools:text="Romania"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/detail_fragment_age_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="22 years"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/detail_fragment_location_textview"
        app:layout_constraintStart_toStartOf="@+id/detail_fragment_location_textview" />

    <TextView
        android:id="@+id/detail_fragment_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Aureliana"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/detail_fragment_age_textview"
        app:layout_constraintStart_toStartOf="@+id/detail_fragment_location_textview" />

</android.support.constraint.ConstraintLayout>